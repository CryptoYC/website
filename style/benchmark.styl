
@import './common.stylus';

.benchmark {
    .head {
        position: relative;

        .content {
            position: absolute;
            color: #fff;
            left: 10%;
            top: 50%;

            .title {
                color: #E67615;
                font-size: 80px;
                margin-bottom: 30px;
            }

            .text {
                margin-top: 10px;
                font-size: 21px;
                width: 70%;
                line-height: 44px;
            }
        }
    }

    .card_content {
        padding: 80px 140px;

        .img {
            width: 80px;
        }

        .title {
            font-size: 60px;
            margin: 40px 0px;
        }

        .text {
            font-size: 18px;
        }
    }

    .icon_padding {
        padding: 40px 0px;
        background: #efefef;
    }

    .list_item {
        padding: 100px 190px;

        .title {
            position: relative;
            right: 50px;
            font-size: 60px;
        }
    }

    .go {
        background: #efefef;
        padding: 40px 140px;
     font-size: 30px;
        .title {
           
            margin: 30px 0px;
        }
        .botder_bottom{
                border-bottom: 1px solid #7b7979;
    padding-bottom: 20px;
        }
        .label {
            display: flex;
            justify-content: space-between;
            align-items: center;
            img {
                width: 43px;
            }

        }
    }
}
