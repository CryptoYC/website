
@import './common.stylus';

.benchmark {
  .head {
    position: relative;

    .content {
      position: absolute;
      color: #fff;
      left: 10%;
      top: 50%;

      .title {
        color: #E67615;
        font-size: 80px;
        margin-bottom: 30px;
      }

      .text {
        margin-top: 10px;
        font-size: 21px;
        width: 70%;
        line-height: 44px;
      }
    }
  }

  .card_content {
    padding: 60px 140px;
    
    .card-title {
      font-size: 32px;
      margin-left: 15px;
      margin-bottom: 20px;
    }
    
    .img {
      width: 80px;
    }

    .title {
      font-size: 60px;
      margin: 40px 0px;
    }

    .text {
      font-size: 18px;
      letter-spacing: 1px;
    }
  }

  .icon_padding {
    padding: 0px;
    background: #efefef;
  }

  .list_item {
    padding: 70px 190px 100px;

    .title {
      position: relative;
      right: 50px;
      font-size: 50px;
    }
  }

  .go {
    background: #efefef;
    padding: 80px 140px 90px;
    font-size: 30px;

    .title {
      margin: 0 0 80px;
    }

    .botder_bottom {
      border-bottom: 1px solid #7b7979;
      padding-bottom: 40px;
      padding-left: 0;
      padding-right: 0;
    }

    .label {
      display: flex;
      justify-content: space-between;
      align-items: center;

      img {
        width: 43px;
      }
    }
  }
}
