.foot {
  padding: 87px 8% 106px;
  color: #fff;
  background: black;

  .title {
    height: 80px;
    font-size: 30px;
    margin-bottom: 40px;
    position: relative;

    a {
      img {
        top: 50%;
        position: absolute;
        transform: translateY(-36%);
      }
    }
  }

  .img-title {
    height: 80px;
    font-size: 34px;
    letter-spacing: 4px;
    margin-bottom: 38px;
    position: relative;

    a {
      img {
        top: 50%;
        position: absolute;
        transform: translateY(-36%);
      }
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    min-height: 160px;
    justify-content: space-between;
    font-size: 18px;
    letter-spacing: 1px;

    .item {
      padding-left: 0;
    }

    a {
      color: #fff;
      text-align: left;
      width: fit-content;
    }
  }

  button {
    color: #fff;
  }

  .logo {
    font-size: 16px;
    letter-spacing: 2px;
    width: 100%;
    margin-top: 143px;
    color: #fff;
    // padding-top: 20px;
    border-top: 1px solid #888686;

    .image {
      width: max-content;
    }
  }

  .icon_list {
    height: 100px;
    width: 200px;

    .icon_item {
      padding: 0px 10px;
    }
  }
}