@import './common.stylus';

.submit {
  .head {
    .title {
      margin-bottom: 5px;
    }
    .text {
      font-size: 34px;
    }
  }


  .search{
    margin: 60px 10% 40px;
  }

  .submit-table {
    margin: 40px 10% 60px;


    .table {
      margin: 40px auto;
      width: 100%;

      thead {
        background-color: #D63B45;
        
        th {
          color: #fff;
          font-size: 20px;
        }

        
      }

      tr td{
        font-size: 18px;
      }

      tr:nth-child(2n) {
        background-color: #dee2e6;
      }

      tr:hover {
        background-color: #E3959C;
      }
    }
  }
}